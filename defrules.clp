(defrule isParent
	(Person (name ?parentName)
			(gender ?)
			(birthYear ?)
			(birthYearFlag ?)
			(height ?)
			(heightFlag ?)
			(parents $?)
			(siblings $?)
			(spouse ?)
	)
	(Person (name ?childName)
			(gender ?)
			(birthYear ?)
			(birthYearFlag ?)
			(height ?)
			(heightFlag ?)
			(parents ?parent1 ?parent2)
			(siblings $?)
			(spouse ?)
	)
	(or
		(test (eq ?parentName ?parent1))
		(test (eq ?parentName ?parent2))
	)
	=>
	(assert (Parent ?parentName ?childName))
	(printout t ?parentName " is " ?childName "'s parent" crlf)
)

(defrule isSibling
	(Person (name ?name)
			(gender ?)
			(birthYear ?)
			(birthYearFlag ?)
			(height ?)
			(heightFlag ?)
			(parents ?p11 ?p12)
			(siblings $?)
			(spouse ?)
	)
	(Person (name ?siblingName)
			(gender ?)
			(birthYear ?)
			(birthYearFlag ?)
			(height ?)
			(heightFlag ?)
			(parents ?p21 ?p22)
			(siblings $?)
			(spouse ?)
	)
	(test (neq ?name ?siblingName))
	(or
		(and
			(test (eq ?p11 ?p21))
			(test (eq ?p12 ?p22))
		)
		
		(and
			(test (eq ?p11 ?p22))
			(test (eq ?p12 ?p21))
		)
	)
	=>
	(assert (Sibling ?name ?siblingName))
	(printout t ?name " is " ?siblingName "'s sibling" crlf)
)

