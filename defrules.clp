(defrule isCousin
	(Person (name ?cousin1Name)
			(gender ?)
			(birthYear ?)
			(birthYearFlag ?)
			(height ?)
			(heightFlag ?)
			(parents ?cousin1Parent1Name ?cousin1Parent2Name)
			(siblings $?)
